#include<iostream>
#include<string>
using namespace std;
int main()
{
  long long t;
  cin>>t;
  while(t--){
  	long long n,l=0,i=0,j=0;
  	cin>>n;
  	string s;
  	cin>>s;
  	while(i<n)
  	{
  		if(s.at(i)=='1')
  		{
  			j++;
  		}
  		i++;
  	}
  	for(i=1;i<=j-1;i++)
  	{
  		l+=i;
  	}
  	cout<<l<<endl;
   }
	return 0;
}
